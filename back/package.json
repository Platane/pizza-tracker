{
    "name"                      : "pizza-tracker-back",
    "version"                   : "1.0.0",

    "engines": {
        "node"                  : ">=7.7"
    },

    "dependencies"              : {
        "twitter"                       : "~1.7.0",
        "regenerator-runtime"           : "~0.10.0"
    },

    "devDependencies"   : {
        "babel-core"                    : "~6.23.0",
        "babel-cli"                     : "~6.23.0",
        "flow-bin"                      : "~0.40.0",
        "flow-typed"                    : "~2.0.0",
        "babel-preset-flow"             : "~6.23.0",
        "babel-preset-es2015"           : "~6.22.0",
        "babel-preset-stage-1"          : "~6.22.0",
        "babel-preset-es2015-rollup"    : "*",
        "rollup"                        : "~0.41.5",
        "rollup-plugin-node-resolve"    : "~2.0.0",
        "rollup-plugin-commonjs"        : "~8.0.2",
        "rollup-plugin-babel"           : "~2.7.1",
        "rollup-plugin-json"            : "~2.1.0",
        "jszip"                         : "~3.1.3",
        "aws-sdk"                       : "~2.27.0"
    },

    "scripts"           : {
        "start"                 : "node --harmony-async-await lib/index.js",
        "build:prod"            : "node ./script/deploy.js",
        "build"                 : "babel --out-dir ./lib ./src",

        "update-lambda"         : "aws lambda update-function-code --region eu-west-1 --function-name pizza-update --zip-file ./pack.zip",

        "flow-typed"            : "flow-typed install"
    }
}
